        <li id="optionen-myadmin">
            <div>(<%= link_to notifications_path do %><span class="notifications<% if @new_notifications.length > 0 %> new<% end %>" id="notifications"><%= @new_notifications.length %></span><% end %>

            /

            <%= link_to user_path(current_user) do %><span class="score"><%= current_user.score %></span><% end %>) 


