      <% if user_signed_in? %>
        <li id="user-info"><%= link_to(image_tag(current_user.avatar(:thumb)) + current_user.username, user_path(current_user), id: 'username') %> <span class="score" title="<%= current_user.score %> Bewertungen">(<%= current_user.score %>)</span></li>
        <li id="optionen-myadmin"><%= link_to "Einstellungen", edit_user_path(current_user) %></li>
        <li id="user-notifications"><%= link_to "Benachrichtigungen", notifications_path %> (<span class="notifications<% if @new_notifications.length > 0 %> new<% end %>" id="notifications" title="<%= @new_notifications.length %> neue Benachrichtigungen"><%= @new_notifications.length %></span>)</li>
