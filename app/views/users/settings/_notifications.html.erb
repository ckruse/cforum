    <div class="cntrls">
      <label class="radio"><input type="radio" value="yes" name="settings[notify_on_cite]"<%= disabled %><% if @settings.conf('notify_on_cite') == 'yes' or @settings.conf('notify_on_cite').blank? %> checked="checked"<% end %>> <%= t("global.yeah") %></label>
