      <label class="checkbox"><input type="checkbox" value="yes" name="settings[delete_read_notifications_on_cite]"<%= disabled %><% if @settings.conf('delete_read_notifications_on_cite') == 'yes' %> checked="checked"<% end %>></label>
    </div>
  </div>

