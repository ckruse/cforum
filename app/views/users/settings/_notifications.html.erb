      <label class="radio"><input type="radio" value="email" name="settings[notify_on_move]"<%= disabled %><% if @settings.conf('notify_on_move') == 'email' %> checked="checked"<% end %>> <%= t("users.settings.via_email") %></label>
    </div>
  </div>

  <div class="cf-cgroup">
