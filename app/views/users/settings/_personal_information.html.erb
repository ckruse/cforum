<fieldset class="cf-tab-pane" id="personal_information">
  <legend><%= t('users.settings.personal_information') %></legend>

  <div class="cf-cgroup">
    <label class="control-label" for="settings_email"><%= t('users.settings.email') %></label>
    <div class="cntrls">
      <input type="text" value="<%= @settings.conf('email') %>" name="settings[email]" id="settings_email"<%= disabled %>>
    </div>
  </div>

  <div class="cf-cgroup">
    <label class="control-label" for="settings_url"><%= t('users.settings.homepage') %></label>
    <div class="cntrls">
      <input type="text" value="<%= @settings.conf('url') %>" name="settings[url]" id="settings_url"<%= disabled %>>
    </div>
  </div>

  <div class="cf-cgroup">
    <label class="control-label" for="settings_flattr"><%= t('users.settings.flattr') %></label>
    <div class="cntrls">
      <input type="text" value="<%= @settings.conf('flattr') %>" name="settings[flattr]" id="settings_flattr"<%= disabled %>>
    </div>
  </div>
</fieldset>
