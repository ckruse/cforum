  <% if @user.errors.any? %>
    <div id="error_explanation" class="cf-error">
      <h4><%= t('users.error_message', count: @user.errors.count) %></h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="cf-tab-pane active" id="user-data">
    <legend><%= t('users.user_information') %></legend>

    <div class="cf-cgroup">
      <%= f.label :username %>
      <div class="cntrls"><%= f.text_field :username %></div>
    </div>

    <div class="cf-cgroup">
      <%= f.label :email %>
      <div class="cntrls"><%= f.email_field :email %></div>
    </div>

    <div class="cf-cgroup">
      <%= f.label :avatar %>
      <div class="cntrls"><%= f.file_field :avatar %></div>
    </div>

  </fieldset>
