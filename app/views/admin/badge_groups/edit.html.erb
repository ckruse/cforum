<%
content_for :title, t('admin.badge_groups.edit_badge_group', name: @badge_group.name)
content_for :h1, t('admin.badge_groups.edit_badge_group', name: @badge_group.name)
%>

<%= form_for @badge_group, url: admin_badge_group_path(@badge_group), html: {class: 'cf-form'} do |f| %>

  <%= render 'form', f: f %>

  <p class="form-actions">
    <%= f.submit t('global.save'), class: 'cf-primary-btn' %>
    <%= cf_link_to t('global.cancel'), admin_badge_groups_path, class: 'cf-btn' %>
  </p>

<% end %>
