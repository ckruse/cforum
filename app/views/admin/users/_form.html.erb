  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><% t('admin.users.error_message', count: @users.errors.count) %>:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="cf-cgroup">
  <%= f.label :username %>
  <div class="cntrls"><%= f.text_field :username %></div>
</div>

<div class="cf-cgroup">
  <%= f.label :email %>
  <div class="cntrls"><%= f.email_field :email %></div>
</div>

<div class="cf-cgroup">
  <%= f.label :admin %>
  <div class="cntrls">
    <label class="checkbox"><%= f.check_box :admin %></label>
  </div>
</div>

<div class="cf-cgroup">
  <%= f.label :active %>
  <div class="cntrls">
    <label class="checkbox"><%= f.check_box :active %></label>
  </div>
</div>


<div class="cf-cgroup">
  <%= f.label :password %>
  <div class="cntrls"><%= f.password_field :password %></div>
</div>

<div class="cf-cgroup">
  <%= f.label :password_confirmation %>
  <div class="cntrls"><%= f.password_field :password_confirmation %></div>
</div>

<div class="form-actions">
  <%= f.submit t('global.save'), class: 'cf-primary-btn' %>
  <%= cf_link_to t('global.cancel'), admin_users_path, class: 'cf-btn' %>
  <%= cf_link_to(t("mails.new_mail"), new_mail_path(cf_priv_message: {recipient_id: @user.user_id}),
                 class: 'cf-btn', rel: 'nofollow') %>
</div>
