<%
content_for :title, t('tags.edit_tag', name: @tag.tag_name)
content_for :h1, t('tags.edit_tag', name: @tag.tag_name)
content_for(:body_id, "tags-edit")
content_for(:body_classes, 'tags edit forum-' + (current_forum.try(:slug) || 'all') + ' tag-' + @tag.slug)
%>

<%= form_for @tag, url: tag_path(current_forum.slug, @tag), html: {class: 'cf-form'} do |f| %>

<%= render 'form', f: f %>

<p class="form-actions">
  <%= f.submit t('global.save'), class: 'cf-primary-btn' %>
  <%= cf_link_to t('global.cancel'), tags_path(current_forum.slug), class: 'cf-btn' %>
</p>

<% end %>
