<%
content_for(:title, t('devise.change_password'))
content_for(:h1, t('devise.change_password'))
%>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'cf-form' }) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-error">
      <h4><%= t("users.could_not_change_password") %></h4>

      <ul>
        <% for message in resource.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :reset_password_token %>

  <div class="cf-cgroup">
    <%= f.label :password, t("devise.new_password") %>
    <%= f.password_field :password %>
  </div>

  <div class="cf-cgroup">
    <%= f.label :password_confirmation, t("devise.confirm_new_password") %>
    <%= f.password_field :password_confirmation %>
  </div>

  <p class="form-actions">
    <%= f.submit t("devise.change_password"), class: 'cf-primary-btn' %>
  </p>
<% end %>
