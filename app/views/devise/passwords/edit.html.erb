<%
content_for(:title, t('devise.change_password'))
content_for(:h1, t('devise.change_password'))
%>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="cf-cgroup">
    <%= f.label :password, t("devise.new_password") %>

    <div class="cntrls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="cf-cgroup">
    <%= f.label :password_confirmation, t("devise.confirm_new_password") %>

    <div class="cntrls">
      <%= f.password_field :password_confirmation %></div>
    </div>
  </div>

  <p class="form-actions">
    <%= f.submit t("devise.change_password"), class: 'cf-primary-btn' %>
  </div>
<% end %>
