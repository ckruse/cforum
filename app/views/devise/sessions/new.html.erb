<%
content_for(:title, t('devise.sign_in'))
content_for(:h1, t('devise.sign_in'))
%>

<%= form_for(resource, as: 'user', url: session_path(resource_name), html: {class: 'cf-form'}) do |f| %>
  <div class="cf-cgroup">
    <%= f.label :login %>
    <%= f.text_field :login, placeholder: User.human_attribute_name(:login), autofocus: true %>
  </div>

  <div class="cf-cgroup">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: User.human_attribute_name(:password), class: 'login-password' %>
    <%= cf_link_to t("devise.forgot_your_password"), new_password_path(resource_name), class: 'forgotten-password-link', tabindex: '-1' %>
  </div>

<% if devise_mapping.rememberable? -%>
  <div class="cf-cgroup">
    <%= f.label :remember_me do %><%= f.check_box :remember_me %> <%= User.human_attribute_name(:remember_me) %><% end %>
  </div>
<% end -%>

  <p class="form-actions"><%= f.submit t('devise.sign_in'), class: 'cf-primary-btn' %></p>
<% end %>

<%# render "devise/shared/links" %>
