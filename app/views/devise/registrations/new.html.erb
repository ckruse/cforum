<%
content_for(:title, t('devise.sign_up'))
content_for(:h1, t('devise.sign_up'))
%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <% if resource.errors.any? %>
  <div class="alert alert-error">
    <h4><%= t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %></h4>

    <ul>
      <% for message in resource.errors.full_messages %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="cf-cgroup">
    <%= f.label :username %>
    <div class="cntrls"><%= f.text_field :username, placeholder: t("layout.placeholders.username") %></div>
  </div>

  <div class="cf-cgroup">
    <%= f.label :email %>
    <div class="cntrls"><%= f.email_field :email, placeholder: t("layout.placeholders.email") %></div>
  </div>

  <div class="cf-cgroup">
    <%= f.label :password %>
    <div class="cntrls"><%= f.password_field :password %></div>
  </div>

  <div class="cf-cgroup">
    <%= f.label :password_confirmation %>
    <div class="cntrls"><%= f.password_field :password_confirmation %></div>
  </div>

  <p class="form-actions">
    <%= f.submit t('devise.sign_up'), class: 'cf-primary-btn' %>
  </p>
<% end %>
