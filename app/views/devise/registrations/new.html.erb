<%
content_for(:title, t('devise.sign_up'))
content_for(:h1, t('devise.sign_up'))
content_for :body_id, 'registrations-new'
content_for :body_classes, 'registrations new'
%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <% if resource.errors.any? %>
  <div class="alert alert-error">
    <h4><%= t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %></h4>

    <ul>
      <% for message in resource.errors.full_messages %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="cf-cgroup">
    <%= f.label :username %>
    <div class="cntrls"><%= f.text_field(:username, placeholder: t("layout.placeholders.username"), 'data-js' => 'username') %></div>
  </div>

  <div class="cf-cgroup">
    <%= f.label(:email) %>
    <div class="cntrls"><%= f.text_field(:email, placeholder: t("layout.placeholders.email"), type: 'email') %></div>
  </div>

  <div class="cf-cgroup">
    <%= f.label :password %>
    <div class="cntrls"><%= f.text_field(:password, type: 'password') %></div>
  </div>

  <div class="cf-cgroup">
    <%= f.label :password_confirmation %>
    <div class="cntrls"><%= f.text_field :password_confirmation, type: 'password' %></div>
  </div>

  <p class="form-actions">
    <%= f.submit t('devise.sign_up'), class: 'cf-primary-btn' %>
  </p>
<% end %>
