<%
with_name ||= false
%>
<fieldset>
  <div class="cf-cgroup">
    <%= f.label :subject %>
    <div class="cntrls"><%= f.text_field :subject, placeholder: t('layout.placeholders.subject'), maxlength: 250 %></div>
  </div>

  <% if not current_user or (with_name and current_user.admin?) %>
  <div class="cf-cgroup">
    <%= f.label :author %>
    <div class="cntrls"><%= f.text_field :author, placeholder: t('layout.placeholders.username'), maxlength: 60 %></div>
  </div>
  <% end %>

  <div class="cf-cgroup">
    <%= f.label :email %>
    <div class="cntrls"><%= f.email_field :email, placeholder: t('layout.placeholders.email_optional'), maxlength: 60 %></div>
  </div>

  <div class="cf-cgroup">
    <%= f.label :homepage %>
    <div class="cntrls"><%= f.text_field :homepage, placeholder: t('layout.placeholders.homepage_optional'), maxlength: 250 %></div>
  </div>
</fieldset>

<fieldset>
  <p>Dieses Forum nutzt <%= link_to 'Markdown', 'http://markdown.de/syntax/index.html' %> zur Formatierung der Postings. <%= link_to 'Formatierungs-Hilfe', 'http://wiki.selfhtml.org/wiki/SELFHTML:Forum/Bedienung' %>
  <div class="cf-cgroup cf-textarea-only">
    <div class="cntrls">
      <%= f.text_area :content, class: 'big', id: 'message_input', maxlength: 12288, value: f.object.to_txt %>
    </div>
  </div>
</fieldset>

<fieldset>
  <div class="cf-cgroup">
    <label>Tag-Vorschl√§ge</label>

    <div class="cntrls">
      <ul id="tags-suggestions" class="cf-tags-list"></ul>
    </div>
  </div>

  <div class="cf-cgroup">
    <label>Tags</label>
    <div class="cntrls" id="tags-group">
      <ul id="tags-list" class="cf-tags-list"></ul>
      <input type="text" name="tag_list" value="<%= @tags.join(", ") %>" id="tags-input" class="tags-input"><noscript> <em>Komma-separierte Liste</em></noscript>
    </div>
  </div>
</fieldset>
