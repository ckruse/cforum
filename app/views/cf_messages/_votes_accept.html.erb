<%
has_upvote = has_downvote = false
has_upvote = true if @votes and @votes[m.message_id] and @votes[m.message_id].vtype == CfVote::UPVOTE
has_downvote = true if @votes and @votes[m.message_id] and @votes[m.message_id].vtype == CfVote::DOWNVOTE

downvote_msg = if current_user.blank?
                 t('messages.login_to_vote')
               elsif not may?(RightsHelper::DOWNVOTE)
                 t('messages.insufficient_rights_to_downvote')
               elsif @message.user_id == current_user.user_id
                  t('messages.do_not_vote_yourself') 
               else
                 if has_downvote
                   t('messages.unvote')
                 else
                   t('messages.vote_down')
                 end
               end

upvote_msg = if current_user.blank?
               t('messages.login_to_vote')
             elsif not may?(RightsHelper::UPVOTE)
               t('messages.insufficient_rights_to_upvote')
             elsif @message.user_id == current_user.user_id
                  t('messages.do_not_vote_yourself')
             else
               if has_upvote
                 t('messages.unvote')
               else
                 t('messages.vote_up')
               end
             end

%><div class="voting">
  <% if @thread.forum.write?(current_user) %>
    <%= form_tag vote_cf_message_path(@thread, m), :method => :post, class: 'form-inline' do %>
      <% if not @thread.message.message_id == m.message_id %>
        <% if not @thread.acceptance_forbidden?(current_user, cookies[:cforum_user]) %>
          <%= link_to("", accept_cf_message_path(@thread, m),
                      method: 'post', class: (m.flags['accepted'] == 'yes' ? 'accepted-answer' : 'unaccepted-answer') + ' cf-btn accept',
                      title: m.flags['accepted'] == 'yes' ? t('messages.unaccept_answer') : t('messages.accept_answer')) %>
        <% else %>
          <% if m.flags['accepted'] == 'yes' %>
            <span class="accept" title="<% t('messages.accepted_answer') %>"><% t('messages.accepted_answer') %></span>
          <% end %>
        <% end %>
      <% end %>

      <button name="type"
              value="down"
              title="<%= downvote_msg %>"
              <% if current_user.blank? or not may?(RightsHelper::DOWNVOTE) or @message.user_id == current_user.user_id %>disabled="disabled"<% end %>
              class="cf-btn vote icon-vote-down<% if has_downvote %> active<% end %>
                     <% if current_user.blank? or not may?(RightsHelper::DOWNVOTE) or @message.user_id == current_user.user_id %> disabled<% end %>">â€’</button>

      <span class="votes" title="<%= t_numerus(m.score, 'messages.votes_s', 'messages.votes_p', num: m.score) %>"><%= m.score %></span>

      <button name="type"
              value="up"
              title="<%= upvote_msg %>"
              <% if current_user.blank? or not may?(RightsHelper::UPVOTE) or @message.user_id == current_user.user_id %>disabled="disabled"<% end %>
              class="cf-btn vote icon-vote-up<% if has_upvote %> active<% end %>
                     <% if current_user.blank? or not may?(RightsHelper::UPVOTE) or @message.user_id == current_user.user_id %> disabled<% end %>">+</button>

      <a href="http://wiki.selfhtml.org/wiki/SELFHTML:Forum/Bewertungsregeln" class="infos" title="Informationen zu den Bewertungsregeln"> </a>
    <% end %>
  <% end %>
</div>
