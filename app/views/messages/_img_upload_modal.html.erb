<div class="modal" id="md-img-upload-modal" aria-hidden="true" aria-labelledby="md-img-upload-modal-title" aria-describedby="md-img-upload-modal-description" role="dialog">
  <div role="document" class="modal-inner">
    <div id="md-img-upload-modal-description" class="visually-hidden"><%= t('messages.modals.img.description') %></div>
    <h1 id="md-img-upload-modal-title"><%= t('messages.modals.img.title') %></h1>

    <div class="cf-form" id="md-modal-image-src">
      <div class="cf-cgroup">
        <label for="md-img-upload-desc"><%= t('messages.modals.img.enter_desc') %></label>
        <input type="text" id="md-img-upload-desc" placeholder="<%= t("messages.modals.img.example_desc") %>">
      </div>

      <div class="cf-cgroup">
        <label for="md-img-upload-title"><%= t('messages.modals.img.enter_title') %></label>
        <input type="text" id="md-img-upload-title" placeholder="<%= t("messages.modals.img.example_title") %>">
      </div>
    </div>

    <p>
      <button class="cf-btn" data-modal="primary"><%= t('global.ok') %></button>
      <button class="cf-btn" data-modal="dismiss"><%= t('global.cancel') %></button>
    </p>

    <button class="modal-close-button" title="<%= t('global.close_popup') %>" aria-label="<%= t('global.close_popup') %>" data-modal="dismiss">&times;</button>
  </div>
</div>
